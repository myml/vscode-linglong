{
  "linglong:version:v1": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:version",
    "body": [
      "version: '1'",
      "package:",
      "  id: $1",
      "  name: your name",
      "  version: 0.0.0.1",
      "  kind: app",
      "  description: |",
      "    your description",
      "",
      "command: [echo, -e, hello world]",
      "",
      "base: org.deepin.base/23.1.0",
      "",
      "build: |",
      "  echo 'hello' #some operation to build this project"
    ],
    "description": "a template"
  },
  "linglong:package:app": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:package",
    "body": [
      "package:",
      "  id: $1",
      "  name: your name",
      "  version: 0.0.0.1",
      "  kind: app",
      "  description: |",
      "    your description",
      "",
      "$2"
    ],
    "description": "a template"
  },
  "linglong:gen_deb_source:sources:23": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:deb:source",
    "body": [
      "sources:",
      "# linglong:gen_deb_source sources amd64 https://ci.deepin.com/repo/deepin/deepin-community/backup/rc2 beige main community",
      "# linglong:gen_deb_source install $1"
    ],
    "description": "linglong gen deb source"
  },
  "linglong:gen_deb_source:sources:25": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:deb:source",
    "body": [
      "sources:",
      "# linglong:gen_deb_source sources amd64 https://ci.deepin.com/repo/deepin/deepin-community/stable crimson/release main community",
      "# linglong:gen_deb_source install $1"
    ],
    "description": "linglong gen deb source"
  },
  "linglong:gen_deb_source:install": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:deb:in",
    "body": ["# linglong:gen_deb_source install $1"],
    "description": "install package"
  },
  "linglong:gen_deb_source:exclude": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:deb:ex",
    "body": ["# linglong:gen_deb_source exclude qemu-user-static $1"],
    "description": "exclude package"
  },
  "linglong:gen_deb_source:install_dep": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:deb:dep",
    "body": ["bash ./install_dep linglong/sources \\$PREFIX $1"],
    "description": "install depend"
  },
  "linglong:gen_dsc_source sources": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:dsc:src",
    "body": [
      "# linglong:gen_dsc_source sources https://mirrors.ustc.edu.cn/deepin/beige beige main community"
    ],
    "description": "linglong gen deb source"
  },
  "linglong:gen_dsc_source install": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:dsc:in",
    "body": ["# linglong:gen_dsc_source install $1"],
    "description": "linglong gen deb source"
  },
  "linglong:buildext:apt": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:buildext:apt",
    "body": [
      "buildext:",
      " apt:",
      "  build_depends:",
      "    - $1",
      "  depends:",
      "    - $2"
    ]
  },
  "linglong:base:20": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:base&runtime",
    "body": [
      "base: org.deepin.foundation/20.0.0",
      "runtime: org.deepin.Runtime/20.0.0"
    ]
  },
  "linglong:base:23": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:base&runtime",
    "body": [
      "base: org.deepin.base/23.1.0",
      "runtime: org.deepin.Runtime/23.1.0"
    ]
  },
  "linglong:base:25": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:base&runtime",
    "body": [
      "base: org.deepin.base/25.2.0",
      "runtime: org.deepin.runtime.dtk/25.2.0"
    ]
  },
  "linglong:base:25:webengine": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:base&runtime",
    "body": [
      "base: org.deepin.base/25.2.0",
      "runtime: org.deepin.runtime.webengine/25.2.0"
    ]
  },
  "linglong:build:cmake": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:build:cmake",
    "body": [
      "build: |",
      "  rm -rf build || true",
      "  mkdir build && cd build",
      "  cmake -DCMAKE_INSTALL_PREFIX=\\$PREFIX ..",
      "  make -j && make install"
    ]
  },
  "linglong:build:qmake": {
    "scope": "source.yaml.linglong",
    "prefix": "ll:build:qmake",
    "body": [
      "build: |",
      "  rm -rf build || true",
      "  mkdir build && cd build",
      "  qmake ..",
      "  make -j && make install"
    ]
  }
}

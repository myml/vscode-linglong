{
  "name": "vscode-linglong",
  "displayName": "linglong",
  "publisher": "myml",
  "repository": {
    "type": "git",
    "url": "https://github.com/myml/vscode-linglong.git"
  },
  "icon": "logo.png",
  "description": "",
  "version": "0.1.7",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "postbuild": "yarn tools:amd64; yarn tools:arm64",
    "tools:amd64": "GOARCH=amd64 go build -ldflags='-s -w' -o out/tools-x64 ./src/tools",
    "tools:arm64": "GOARCH=arm64 go build -ldflags='-s -w' -o out/tools-arm64 ./src/tools",
    "vscode:prepublish": "yarn run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run build && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev.linglong.extension.gen_deb_source",
        "title": "linglong: Gen deb sources"
      },
      {
        "command": "dev.linglong.extension.gen_dsc_source",
        "title": "linglong: Gen dsc sources"
      },
      {
        "command": "dev.linglong.extension.deb_source_to_buildext",
        "title": "linglong: DEB sources to buildext"
      },
      {
        "command": "dev.linglong.extension.build",
        "title": "linglong: Build"
      },
      {
        "command": "dev.linglong.extension.build.offline",
        "title": "linglong: Offline Build"
      },
      {
        "command": "dev.linglong.extension.run",
        "title": "linglong: Run"
      },
      {
        "command": "dev.linglong.extension.export",
        "title": "linglong: Export"
      },
      {
        "command": "dev.linglong.extension.build.clean",
        "title": "linglong: Clean build output"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "linglong.yaml",
        "url": "./schemas/linglong-schemas.json"
      }
    ],
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/linglong-snippets.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "source.yaml.linglong",
        "path": "./syntaxes/linglong-syntaxes.json",
        "injectTo": [
          "source.yaml"
        ]
      }
    ],
    "configuration": {
      "title": "linglong",
      "properties": {
        "linglong.gen_deb_source.skip": {
          "type": "boolean",
          "default": false,
          "description": "生成deb source时跳过base和runtime已存在的包，该功能依赖ll-builder"
        },
        "linglong.gen_deb_source.denylist": {
          "type": "array",
          "default": [
            "qemu-user-static"
          ],
          "description": "生成deb source时跳过该列表中的包"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "dependencies": {}
}

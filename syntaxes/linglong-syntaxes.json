{
  "scopeName": "source.yaml.linglong",
  "injectionSelector": "L:source",
  "patterns": [
    {
      "include": "#build-code-block"
    }
  ],
  "repository": {
    "build-code-block": {
      "begin": "^(?=build: \\|)",
      "end": "^(?=[a-z])",
      "patterns": [
        {
          "include": "source.shell"
        }
      ]
    }
  }
}
